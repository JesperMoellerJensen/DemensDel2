@model DemensDel2.Models.ExerciseDTO

@{
    ViewData["Title"] = "Exercise";
}

<div>
    <h2>Træningsektion - Dato</h2>
    @foreach (var e in Model.ExerciseNames)
    {
        <a href="@Url.Action("TrainingSession", "User", new { id = e.Key })">@e.Value</a>
    }
</div>

@if (Model.SlectedExercise != null)
{

<h2>@Model.SlectedExercise.ExerciseType.Name</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Beskrivelse:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SlectedExercise.ExerciseType.Description)
        </dd>

        <dt>
            MuskelGruppe
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SlectedExercise.ExerciseType.MuscleGroup)
        </dd>

        <dt>
            Sværhedsgrad:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SlectedExercise.ExerciseType.Difficulty)
        </dd>

        <dt>
            TidsVarighed:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SlectedExercise.ExerciseType.Duration)
        </dd>

        <h3>Resultat</h3>
        <hr />
       
        <dt>
            UførelsesProcent:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SlectedExercise.ExecutionRate)
        </dd>
        <dt>
            SmerteNiveau:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SlectedExercise.PaintLevel)
        </dd>
        <dt>
            Indsats:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SlectedExercise.Effort)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Tilbage til listen</a>
</div>
}